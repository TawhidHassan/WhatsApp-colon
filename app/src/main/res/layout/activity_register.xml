<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/registerImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/signup_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                />
            <EditText
                android:id="@+id/registerEmailid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/registerImage"
                android:background="@drawable/inputs"
                android:layout_marginTop="10dp"
                android:hint="Email.."
                android:inputType="textEmailAddress"
                android:padding="4dp"
                android:drawableStart="@drawable/email"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentStart="true"/>
            <EditText
                android:id="@+id/registerPasswordid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/registerEmailid"
                android:background="@drawable/inputs"
                android:layout_marginTop="10dp"
                android:hint="password.."
                android:inputType="textPassword"
                android:padding="4dp"
                android:drawableStart="@drawable/password"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentStart="true"/>

            <Button
                android:id="@+id/register_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerPasswordid"
                android:background="@drawable/buttons"
                android:text="Register"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/already_have_accout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_button_id"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Already Have An Account?? Login here!"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>